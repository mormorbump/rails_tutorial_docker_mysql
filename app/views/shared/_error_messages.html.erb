<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
        <!--plurlizeは個数によって単語を活用してくれるやつ。複数形とか-->
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>